<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="playListDialogViewModel"
            type="com.dai.message.ui.dialog.PlayListDialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/play_list_corners_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/play_list"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_play_list"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/play_list_bg"
            android:padding="1dp" />
    </LinearLayout>


</layout>